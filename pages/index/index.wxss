/* 购物车动画效果 */

.bus {
  position: fixed;
  left: 85%;
  top: 85%;
  background-color: #bf0ff0;
  border-radius: 50%;
  z-index: 99;
}

.bus image {
  width: 62px;
  height: 62px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -4px;
}

.count {
  display: block;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  font-size: 12px;
  background: #ff4611;
  border-radius: 10px;
  color: #fff;
  position: absolute;
  left: 34px;
  top: 0;
}



.good_box {
  width: 40px;
  height: 40px;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  z-index: +99;
  border: 1px solid #fff;
  background: rgba(120, 188, 255, 0.2);
}

.good_box image {
  display: block;
  width: 100%;
  height: 100%;
}
