page{ 
  height: 100%; 
  position: relative;
 } 
  
 .container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  padding: 0; 
  box-sizing: border-box; 
 } 
  
 /*登录图片*/
 .login-icon{ 
  flex: none; 
 } 

 .title{
   margin: 0 auto;
   text-align: center;
   position: absolute;
   top: 20rpx;
   color: white;
}
.pic{
  background-color:rgb(185, 10, 233);
  width: 190rpx;
  height: 190rpx;
  position: absolute;
  top: 140rpx;
  border-radius: 95rpx;
}
.pic image{
  width: 180rpx;
  height: 180rpx;
  margin: 5rpx;
  border-radius: 90rpx;
}
 .login-img{ 
  width: 750rpx;
 } 
 .feeedback{
   border: solid 1rpx #bf0ff0;
 }
 .submit{
  background-color: #ac0dd8cc;
  color: white;
  margin-top: 40rpx;
 }
 .form{
  position: absolute;
  top: 500rpx;
  margin-top: 40rpx;
 }